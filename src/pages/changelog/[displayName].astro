---
import Layout from "@layouts/Layout.astro";
import VerticalStepper from "@components/vertical-stepper";
import { GetCurrentChangelog } from "src/changelog";

const { displayName } = Astro.params;

const changelog = GetCurrentChangelog(Astro.locals, displayName);
Astro.locals.changelog = changelog;
---

<Layout
    title="Autumn-cl"
    desc="Autogenerated changelogs!"
>
    <VerticalStepper generated={changelog.generated} />
</Layout>
